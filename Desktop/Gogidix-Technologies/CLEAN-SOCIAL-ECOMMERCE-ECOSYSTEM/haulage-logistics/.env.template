# Haulage Logistics Domain - Environment Configuration
# Copy this file to .env and customize for your environment

# Application Environment
ENVIRONMENT=development
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=haulage_logistics
POSTGRES_USER=haulage_user
POSTGRES_PASSWORD=your_secure_postgres_password

# MongoDB Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27018
MONGODB_DATABASE=haulage_logs
MONGODB_USERNAME=haulage_admin
MONGODB_PASSWORD=your_secure_mongodb_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=your_secure_redis_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9093
KAFKA_GROUP_ID=haulage-logistics-group

# Service Discovery
EUREKA_SERVER_URL=http://localhost:8762/eureka

# External API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
WEATHER_API_KEY=your_weather_api_key
FUEL_PRICE_API_KEY=your_fuel_price_api_key

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION=86400000
ENCRYPTION_KEY=your_encryption_key_32_chars_long

# Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMS_API_KEY=your_sms_provider_api_key

# File Storage
FILE_STORAGE_TYPE=local
AWS_S3_BUCKET=haulage-logistics-files
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Monitoring & Observability
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password
ELASTIC_SEARCH_URL=http://localhost:9200
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Business Configuration
COMPANY_NAME=Exalt Application Limited
COMPANY_EMAIL=info@exalt.com
SUPPORT_EMAIL=support@haulage.exalt.com
BILLING_EMAIL=billing@haulage.exalt.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Feature Flags
ENABLE_ROUTE_OPTIMIZATION=true
ENABLE_REAL_TIME_TRACKING=true
ENABLE_PREDICTIVE_MAINTENANCE=true
ENABLE_FUEL_OPTIMIZATION=true
ENABLE_COMPLIANCE_MONITORING=true

# Integration URLs
WAREHOUSING_SERVICE_URL=http://localhost:8080
COURIER_SERVICE_URL=http://localhost:8081
SOCIAL_COMMERCE_SERVICE_URL=http://localhost:8082
SHARED_INFRASTRUCTURE_URL=http://localhost:8083

# Development Tools
ENABLE_SWAGGER_UI=true
ENABLE_DEBUG_LOGGING=true
ENABLE_ACTUATOR_ENDPOINTS=true

# Performance Configuration
HIKARI_MAXIMUM_POOL_SIZE=20
HIKARI_CONNECTION_TIMEOUT=30000
REDIS_CONNECTION_POOL_SIZE=10
KAFKA_CONSUMER_MAX_POLL_RECORDS=500

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://haulage.exalt.com
SECURITY_REQUIRE_SSL=false
SESSION_TIMEOUT=1800

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups/haulage-logistics

# Load Balancing
LOAD_BALANCER_ALGORITHM=round_robin
HEALTH_CHECK_INTERVAL=30
CIRCUIT_BREAKER_ENABLED=true
RETRY_ATTEMPTS=3

# Caching Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000
ENABLE_DISTRIBUTED_CACHE=true

# Audit Configuration
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_LEVEL=INFO